<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="top"
    android:background="@drawable/background_design">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <View
            android:id="@+id/exit"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_gravity="center"
            android:background="@drawable/close"
            />
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="Ajouter un employer"
        android:layout_marginTop="10mm"
        android:layout_marginBottom="10dp"
        android:textColor="#FF9800"
        android:textSize="30sp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="350dp"
        android:layout_height="350dp"
        android:gravity="center_horizontal"
        android:background="@drawable/shadow"
        android:layout_gravity="center"
        android:orientation="vertical">

        <EditText
            android:id="@+id/cin"
            android:layout_width="346dp"
            android:layout_height="48dp"
            android:layout_marginTop="40dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/fields"
            android:hint="Entrez votre CIN"
            android:paddingLeft="20dp"
            android:textColorHint="#FF9800" />

        <EditText
            android:id="@+id/nomComplet"
            android:layout_width="345dp"
            android:layout_height="47dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/fields"
            android:hint="Entrez votre nom complet"
            android:paddingLeft="20dp"
            android:textColorHint="#FF9800" />

        <EditText
            android:id="@+id/phone"
            android:layout_width="348dp"
            android:layout_height="53dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/fields"
            android:hint="Entrez votre Tel"
            android:inputType="phone"
            android:paddingLeft="20dp"
            android:textColorHint="#FF9800" />

        <EditText
            android:id="@+id/email"
            android:layout_width="352dp"
            android:layout_height="47dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/fields"
            android:hint="Entrez votre mail"
            android:paddingLeft="20dp"
            android:textColorHint="#FF9800" />

        <LinearLayout
            android:layout_width="357dp"
            android:layout_height="41dp"
            android:layout_marginBottom="30dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:text="DÃ©partement:"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:textStyle="bold" />

            <Spinner
                android:id="@+id/departement"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:entries="@array/departement"
                android:prompt="@string/depa_hint" />

        </LinearLayout>

    </LinearLayout>

    <TextView
        android:id="@+id/save"
        android:layout_gravity="center_horizontal"
        android:layout_width="350dp"
        android:layout_height="50dp"
        android:gravity="center"
        android:layout_marginTop="20dp"
        android:padding="7dp"
        android:layout_marginBottom="50dp"
        android:background="@drawable/radiussed"
        android:backgroundTint="#2C3C2D"
        android:text="Save"
        android:textColor="#323019"
        android:textSize="30sp"
        android:textStyle="bold" />

</LinearLayout>
